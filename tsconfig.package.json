{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "files": ["./src/index.ts"],
  "include": ["./src/types/**/*"],
  "exclude": ["node_modules"],
  "extends": "./tsconfig.json"
}
